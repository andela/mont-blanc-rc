{
  "globals": {
    "document": true,
    "foo": true,
    "window": true,
    "localStorage": true,
    "browser": true,
    "Assets": true, // Meteor global
    "Package": true, // Meteor global
    "FS": true, // gridFS,
    "Alerts": true, // this needs to get cleaned up, but ignoring for now
    "jest": true,
    "expect": true,
    "test": true,
    "PaystackPop": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "root": true,
  "extends": "airbnb",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true,
    "browser": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "jsx-a11y/label-has-for":0,
    "react/jsx-filename-extension":0,
    "no-nested-ternary": 0,
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "no-underscore-dangle": 0,
    "no-undef": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "curly": [
      "error",
      "multi-line"
    ],
    "class-methods-use-this": 0,
    "react/forbid-prop-types": 0,
    "no-empty-pattern": 0,
    "react/no-unused-state": 0,
    "no-shadow": [
      "error",
      {
        "allow": [
          "req",
          "res",
          "err"
        ]
      }
    ],
    "valid-jsdoc": [
      "error",
      {
        "requireReturn": true,
        "requireReturnType": true,
        "requireParamDescription": false,
        "requireReturnDescription": true
      }
    ],
    "require-jsdoc": [
      "error",
      {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true
        }
      }
    ]
  }
}
